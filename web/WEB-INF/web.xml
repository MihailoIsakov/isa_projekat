<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  
   <servlet>
      <servlet-name>CategoryServlet</servlet-name>
      <servlet-class>rs.ac.uns.ftn.informatika.mbs2.vezbe09.primer01.server.servlet.CategoryServlet</servlet-class>
   </servlet>

   <servlet>
      <servlet-name>OfferServlet</servlet-name>
      <servlet-class>rs.ac.uns.ftn.informatika.mbs2.vezbe09.primer01.server.servlet.OfferServlet</servlet-class>
   </servlet>

   <servlet>
      <servlet-name>PrepareUpdateController</servlet-name>
      <servlet-class>rs.ac.uns.ftn.informatika.mbs2.vezbe09.primer01.server.servlet.PrepareUpdateController</servlet-class>
   </servlet>
   
   <servlet>
      <servlet-name>PrepareCreateController</servlet-name>
      <servlet-class>rs.ac.uns.ftn.informatika.mbs2.vezbe09.primer01.server.servlet.PrepareCreateController</servlet-class>
   </servlet>
   
   <servlet>
      <servlet-name>CreateController</servlet-name>
      <servlet-class>rs.ac.uns.ftn.informatika.mbs2.vezbe09.primer01.server.servlet.CreateController</servlet-class>
   </servlet>
   
   <servlet>
      <servlet-name>UpdateController</servlet-name>
      <servlet-class>rs.ac.uns.ftn.informatika.mbs2.vezbe09.primer01.server.servlet.UpdateController</servlet-class>
   </servlet>
   
   <servlet>
      <servlet-name>LoginController</servlet-name>
      <servlet-class>rs.ac.uns.ftn.informatika.mbs2.vezbe09.primer01.server.servlet.LoginController</servlet-class>
   </servlet>
   
   <servlet>
      <servlet-name>ReadController</servlet-name>
      <servlet-class>rs.ac.uns.ftn.informatika.mbs2.vezbe09.primer01.server.servlet.ReadController</servlet-class>
   </servlet>
   
   <servlet>
      <servlet-name>DeleteController</servlet-name>
      <servlet-class>rs.ac.uns.ftn.informatika.mbs2.vezbe09.primer01.server.servlet.DeleteController</servlet-class>
   </servlet>

   <servlet-mapping>
      <servlet-name>CategoryServlet</servlet-name>
      <url-pattern>/category/*</url-pattern>
   </servlet-mapping>

   <servlet-mapping>
      <servlet-name>OfferServlet</servlet-name>
      <url-pattern>/offer/*</url-pattern>
   </servlet-mapping>

   <servlet-mapping>
      <servlet-name>PrepareUpdateController</servlet-name>
      <url-pattern>/PrepareUpdateController</url-pattern>
   </servlet-mapping>
   
   <servlet-mapping>
      <servlet-name>PrepareCreateController</servlet-name>
      <url-pattern>/PrepareCreateController</url-pattern>
   </servlet-mapping>
   
   <servlet-mapping>
      <servlet-name>CreateController</servlet-name>
      <url-pattern>/CreateController</url-pattern>
   </servlet-mapping>
   
   <servlet-mapping>
      <servlet-name>UpdateController</servlet-name>
      <url-pattern>/UpdateController</url-pattern>
   </servlet-mapping>
   
   <servlet-mapping>
      <servlet-name>LoginController</servlet-name>
      <url-pattern>/LoginController</url-pattern>
   </servlet-mapping>
   
   <servlet-mapping>
      <servlet-name>ReadController</servlet-name>
      <url-pattern>/ReadController</url-pattern>
   </servlet-mapping>
   
   <servlet-mapping>
      <servlet-name>DeleteController</servlet-name>
      <url-pattern>/DeleteController</url-pattern>
   </servlet-mapping>

   <servlet-mapping>
       <servlet-name>default</servlet-name>
       <url-pattern>/*</url-pattern>
   </servlet-mapping>

   
   <welcome-file-list>
   		<welcome-file>/index.html</welcome-file>
   </welcome-file-list>
   <error-page>
		<exception-type>
			java.lang.Throwable
		</exception-type>
		<location>/error.jsp</location>
   </error-page>
   <error-page>
   		<error-code>404</error-code>
   		<location>/404.jsp</location>
   </error-page> 

</web-app>
